<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Planeedid.Views.PlanetDetailsPage"
             Title="PlanetDetailsPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#666" Offset="0.0"/>
            <GradientStop Color="#000" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid
        Margin="24,52,24,0"
        ColumnDefinitions="*,*"
        RowDefinitions="Auto,*">

        <ImageButton
            WidthRequest="24"
            HeightRequest="24"
            Source="imgback.png"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Clicked="BackButton_Clicked"/>

        <ImageButton
            WidthRequest="24"
            HeightRequest="24"
            Source="imgmenu.png"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalOptions="End"
            VerticalOptions="Center"/>

        <!--Main Content scrollview-->
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalScrollBarVisibility="Never"
            VerticalScrollBarVisibility="Never"
            Margin="0,16,0,0">

            <VerticalStackLayout
                Spacing="18">

                <!--Planet Image-->
                <Image 
                    Source="{Binding HeroImage}"
                    Aspect="AspectFit"
                    HorizontalOptions="Fill"
                    HeightRequest="240"
                    Margin="24,0" />

                <!--Planet name-->
                <Label 
                    Margin="0,-24,0,0"
                    Style="{StaticResource AllPlanetHeaderSubtitleStyle}"
                    Text="{Binding Name}"/>
                <!--Planet Subtitle-->
                <Label 
                    Margin="0,-24,0,0"
                    Style="{StaticResource PlanetHeaderSubtitleStyle}"
                    Text="{Binding Subtitle}"/>

                <!--Divider-->
                <Rectangle 
                    HorizontalOptions="Fill"
                    HeightRequest="2"
                    Stroke="Transparent"
                    Fill="{StaticResource LightBorderColor}"/>

                <!--Planet info-->
                <Label 
                    LineBreakMode="WordWrap"
                    Style="{StaticResource PlanetDetailsTextStyle}"
                    Text="{Binding Description}"/>

                <!-- Planet images -->
                <Label
    Style="{StaticResource FeaturedPlanetHeaderSubtitleStyle}"
    Text="Gallery"/>

                <CollectionView
    ItemsSource="{Binding Images}"
    HeightRequest="140"
    Margin="0,8,0,0">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout
            Orientation="Horizontal"
            ItemSpacing="12"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                Padding="0"
                CornerRadius="12"
                HasShadow="False"
                HeightRequest="120"
                WidthRequest="160">

                                <Image
                    Aspect="AspectFill"
                    HeightRequest="120"
                    WidthRequest="160">
                                    <Image.Source>
                                        <UriImageSource
                            Uri="{Binding .}"
                            CachingEnabled="True"
                            CacheValidity="7.00:00:00"/>
                                    </Image.Source>
                                </Image>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>